{
  "name": "portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portal",
  "projectType": "application",
  "tags": ["scope:portal", "type:app"],
  "// targets": "to see all targets run: nx show project portal --web",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/portal",
        "command": "eslint ."
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/portal",
        "tty": false,
        "env": {
          "NODE_ENV": "production"
        },
        "command": "next build"
      },
      "dependsOn": ["^build"],
      "outputs": [
        "{workspaceRoot}/apps/portal/.next/!(cache)/**/*",
        "{workspaceRoot}/apps/portal/.next/!(cache)"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "cwd": "apps/portal",
        "command": "next dev --port 4201"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "continuous": true,
      "dependsOn": ["build"],
      "options": {
        "cwd": "apps/portal",
        "command": "next start --port 4201"
      }
    }
  }
}
